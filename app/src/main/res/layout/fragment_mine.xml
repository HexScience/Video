<?xml version="1.0" encoding="utf-8"?>
<layout >
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_bar_layout">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleGravity="top"
                app:contentScrim="@color/coment_color"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <RelativeLayout
                    android:id="@+id/re_user_bg_cover"
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    app:layout_collapseMode="parallax">
                    <com.video.newqu.view.widget.TouchFilterImageView
                        android:id="@+id/iv_user_image_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iv_mine_bg" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/bg_black_shape_gratien" />
                </RelativeLayout>
                <!--背景图图片-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="165dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="61dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/bg_fillet_background_white"/>
                        <RelativeLayout
                            android:id="@+id/re_user_data_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp">
                            <RelativeLayout
                                android:id="@+id/re_user_icon"
                                android:layout_width="86dp"
                                android:layout_height="86dp">
                                <com.video.newqu.view.widget.TouchFilterImageView
                                    android:id="@+id/iv_user_icon"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/pay_user_bg_shape"
                                    android:src="@drawable/iv_mine"
                                    android:transitionName="@string/transition_movie_img" />
                                <ImageView
                                    android:id="@+id/iv_user_sex"
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="3dp"
                                    android:background="@drawable/arl_white_dot"
                                    android:src="@drawable/iv_icon_sex_women"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="86dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/re_user_icon"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/tv_user_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginBottom="5dp"
                                            android:ellipsize="end"
                                            android:maxLength="20"
                                            android:shadowColor="#000000"
                                            android:shadowDx="5"
                                            android:shadowDy="5"
                                            android:shadowRadius="3"
                                            android:singleLine="true"
                                            android:text="--"
                                            android:textColor="@color/white"
                                            android:textSize="17sp"/>
                                        <TextView
                                            android:id="@+id/tv_user_grade"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/bg_shape_round_yellow"
                                            android:layout_marginBottom="5dp"
                                            android:gravity="center"
                                            android:text="Lv1"
                                            android:textColor="@color/app_red_style"
                                            android:textSize="12sp"
                                            android:textStyle="italic|bold"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_fans_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="3dp"
                                        android:text="--"
                                        android:textColor="@color/common_h1"
                                        android:textSize="15sp"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="13dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/gray">
                                    </View>
                                    <TextView
                                        android:id="@+id/tv_follow_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="3dp"
                                        android:text="--"
                                        android:textColor="@color/common_h1"
                                        android:textSize="15sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/tv_user_desp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="--"
                            android:textColor="@color/common_empty"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:lineSpacingMultiplier="1.2"
                            android:paddingBottom="6dp"
                            android:textSize="14sp"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="pin">
                    <View
                        android:id="@+id/top_empty_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/statusbar_view_height"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:id="@+id/btn_notifaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="?attr/selectableItemBackground"
                                android:padding="10dp"
                                android:src="@drawable/btn_notifaction_selector"/>
                            <View
                                android:id="@+id/view_tips"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@drawable/arl_red_dot"
                                android:layout_alignParentRight="true"
                                android:layout_margin="8dp"
                                android:visibility="invisible"/>
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/btn_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="?attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/ic_mine_setting_icon"/>
                        <ImageView
                            android:id="@+id/btn_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="?attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/btn_video_details_share_selector"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <!--悬浮的菜单-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_tool_bar"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">
                <com.androidkun.xtablayout.XTabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    app:xTabMode="fixed"
                    app:xTabIndicatorColor="@color/tab_indicator_color"
                    app:xTabIndicatorHeight="2dp"
                    app:xTabIndicatorWidth="22dp"
                    app:xTabSelectedTextColor="@color/app_style"
                    app:xTabTextColor="@color/tab_text_unselector_color"
                    app:xTabTextSize="14sp"
                    app:xTabSelectedTextSize="15sp"
                    android:background="@color/white"
                    app:tabTextAppearance="@style/TabLayoutTextAppearance"/>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <!--子界面Pager-->
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </android.support.v4.view.ViewPager>
        <!--配合CoordinatorLayout滑动的组件 app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
        <!--刷新窗体-->
        <LinearLayout
            android:id="@+id/load_more_loading_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_style"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusbar_view_height"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/iv_loading_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/header_refresh_anmi"/>

                <TextView
                    android:id="@+id/loading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="加载中..."
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
