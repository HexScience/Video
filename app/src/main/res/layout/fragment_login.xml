<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--手机号-->
            <com.video.newqu.view.widget.EditInputView
                android:id="@+id/input_account"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                app:inputInputIcon="@drawable/ic_login_account"
                app:inputCleanIcon="@drawable/ic_login_calen"
                app:inputHintText="请输入手机号"
                app:inputTextColor="@color/black"
                app:inputHintTextColor="@color/login_hint"
                app:inputInputType="0"
                android:background="@drawable/square_login_background_orgin">
            </com.video.newqu.view.widget.EditInputView>
            <!--密码-->
            <com.video.newqu.view.widget.EditInputView
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                app:inputInputIcon="@drawable/ic_login_password"
                app:inputCleanIcon="@drawable/ic_login_calen"
                app:inputHintText="请输入密码"
                app:inputTextColor="@color/black"
                app:inputHintTextColor="@color/login_hint"
                app:inputInputType="2"
                android:background="@drawable/square_login_background_orgin">
            </com.video.newqu.view.widget.EditInputView>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="立即登录"
                android:gravity="center"
                android:background="@drawable/btn_media_send_app_style_shape"
                android:textSize="16sp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_retrieve_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:padding="17dp"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </RelativeLayout>
</layout>
